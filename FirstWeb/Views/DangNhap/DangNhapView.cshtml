@using Microsoft.AspNetCore.Mvc.TagHelpers
@model FirstWeb.Models.Login
@{
    ViewData["Title"] = "Đăng Nhập";
}
<div class="container">

    <div class="container">
        <form class="form-signin" asp-controller="DangNhap" asp-action="CheckLogin" method="post">
            @Html.AntiForgeryToken()

            <h2 class="form-signin-heading">Đăng Nhập</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="taiKhoan" class="sr-only">Username</label>
                <input asp-for="taiKhoan" type="text" class="form-control" placeholder="Username" name="taiKhoan">
                <span asp-validation-for="taiKhoan" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="matKhau" class="sr-only">Password</label>
                <input asp-for="matKhau" type="password" class="form-control" placeholder="Password" name="matKhau">
                <span asp-validation-for="matKhau" class="text-danger"></span>
            </div>

            <button class="btn btn-lg btn-primary btn-block btn-white" type="submit">Đăng nhập</button>
        </form>
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                <strong>@TempData["ErrorMessage"]</strong>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
