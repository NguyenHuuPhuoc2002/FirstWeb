@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Đăng Nhập";
}
<div class="container">

    <div class="container">
        <form class="form-signin" asp-controller="DangNhap" asp-action="CheckLogin" method="post">
            @Html.AntiForgeryToken()

            <h2 class="form-signin-heading">Đăng Nhập</h2>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="txtun" class="sr-only">Username</label>
                <input type="text" class="form-control" placeholder="Username" name="taiKhoan">
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="txtpass" class="sr-only">Password</label>
                <input type="password" class="form-control" placeholder="Password" name="matKhau">
            </div>

            <button class="btn btn-lg btn-primary btn-block btn-white" type="submit">Đăng nhập</button>
        </form>
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                <strong>@TempData["ErrorMessage"]</strong>
            </div>
        }
    </div>
</div>

